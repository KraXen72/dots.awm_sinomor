#!/bin/bash
folder_path="$HOME/.walls"
list=($(ls $folder_path | shuf))
out="$HOME/.config/awesome/themes/wall.jpg"
palette="gruvbox-dark-soft"
lut="$HOME/.config/awesome/other/mountain.png"
for image in "${list[@]}"
do

lutgen apply --hald-clut $lut $folder_path/$image -o $out
feh --no-fehbg --bg-fill $out

sleep $1
done
